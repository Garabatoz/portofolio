---
import Layout from '../layouts/Layout.astro';
import Projects from '../components/Projects.astro';

// Datos de ejemplo para los proyectos (podemos añadir más que en la página principal)
const projects = [
{
        title: "Imagenes aleatorias",
        description: "Una aplicación web para mostrar imagenes con dimensiones aleatorias cada vez que se carga la pagina.",
        image: "/public/images/imagesPage.png",
        tags: ["JavaScript", "HTML", "CSS", "Astro"],
        demoUrl: "https://images-oo6fpa169-santiagos-projects-7144875a.vercel.app/",
        repoUrl: "https://images-oo6fpa169-santiagos-projects-7144875a.vercel.app/"
    }
];
---

<Layout>
    <div class="page-header">
        <div class="container">
            <h1>Mis Proyectos</h1>
            <p>Una selección de los proyectos más destacados en los que he trabajado</p>
        </div>
    </div>
    
    <Projects 
        title=""
        projects={projects}
    />
</Layout>

<style>
    .page-header {
        padding: 5rem 0 3rem;
        background: linear-gradient(to right, var(--secondary-color), #e8ebff);
        text-align: center;
    }
    
    .page-header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    
    .page-header p {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto;
        color: var(--body-color);
    }
    
    @media (max-width: 768px) {
        .page-header {
            padding: 3rem 0 2rem;
        }
        
        .page-header h1 {
            font-size: 2.5rem;
        }
    }
</style> 